<?xml version="1.0" encoding="utf-8"?>

<!-- Load the game data schema declaration. -->
<h:root
    xmlns:h="https://henshin.jb-caillaud.fr/" 
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="https://henshin.jb-caillaud.fr/ GameData.xsd"
>
    <!-- Act 1 -->
    <h:act>
        <!-- Scene 1 -->
        <h:scene>
            <h:gameplay identifier="Amantes" kind="snowball">
                <h:answer width="150"/>
                <h:original><h:i>Pyramus</h:i></h:original>
                <h:translated><h:t>Pyrame</h:t></h:translated>
                <h:options>
                    <h:option>Pyrame</h:option>
                    <h:option>Pirate</h:option>
                    <h:option>Thisbé</h:option>
                    <h:option>TisseBaie</h:option>
                </h:options>
                
                <h:original><h:i>Pyramus</h:i> et <h:i>Thisbe</h:i></h:original>
                <h:translated>Pyrame et <h:t>Thisbé</h:t></h:translated>
                <h:options>
                    <h:option>Pyrame</h:option>
                    <h:option>Pirate</h:option>
                    <h:option>Thisbé</h:option>
                    <h:option>TisseBaie</h:option>
                </h:options>
                
                <h:original><h:i>Pyramus</h:i> et <h:i>Thisbe</h:i> sunt</h:original>
                <h:translated><h:i>Pyrame</h:i> et <h:i>Thisbé</h:i> <h:t>sont</h:t></h:translated>
                <h:options>
                    <h:option>furent</h:option>
                    <h:option>sont</h:option>
                    <h:option>ont</h:option>
                </h:options>
                
                <h:original><h:i>Pyramus</h:i> et <h:i>Thisbe</h:i> sunt duo amantes</h:original>
                <h:translated><h:i>Pyrame</h:i> et <h:i>Thisbé</h:i> sont <h:t>deux</h:t> <h:t>amants</h:t>.</h:translated>
                <h:options>
                    <h:option>deux</h:option>
                    <h:option>trois</h:option>
                    <h:option>amants</h:option>
                    <h:option>amis</h:option>
                </h:options>
            </h:gameplay>
        </h:scene>
        
        <!-- Scene 2 -->
        <h:scene>
            <h:gameplay identifier="Superaltif" kind="questions">
                <h:answer width="200" duplicate="true"/>
                <h:original>
                    Alter est <h:b><h:s text="Superlatif">pulcherrimus</h:s></h:b> juvenis et 
                    altera <h:b><h:s text="Superlatif">pulcherrima</h:s></h:b> puella in Orientem.</h:original>
                <h:options>
                    <h:option>Superlatif</h:option>
                    <h:option>Comparatif</h:option>
                </h:options>
            </h:gameplay>
            <h:gameplay identifier="Genre (Him)" kind="questions">
                <h:answer width="150" duplicate="true"/>
                <h:original>Alter est <h:b><h:s text="Masculin">pulcherrimus</h:s></h:b> juvenis et altera pulcherrima puella in Orientem.</h:original>
                <h:options>
                    <h:option>Masculin</h:option>
                    <h:option>Feminin</h:option>
                    <h:option>Neutre</h:option>
                </h:options>
            </h:gameplay>
            <h:gameplay identifier="Genre (Her)" kind="questions">
                <h:answer width="150" duplicate="true"/>
                <h:original>Alter est pulcherrimus juvenis et altera <h:b><h:s text="Feminin">pulcherrima</h:s></h:b> puella in Orientem.</h:original>
                <h:options>
                    <h:option>Masculin</h:option>
                    <h:option>Feminin</h:option>
                    <h:option>Neutre</h:option>
                </h:options>
            </h:gameplay>
            <h:gameplay identifier="Genre (Neutral)" kind="questions">
                <h:answer width="225" duplicate="true"/>
                <h:original>Pulcherrimus = Masculin<h:br/>Pulcherrima = Feminin<h:br/><h:t>Pulcherrimum</h:t> = Neutre</h:original>
                <h:options>
                    <h:option>Pulcherrimus</h:option>
                    <h:option>Pulcherrimo</h:option>
                    <h:option>Pulcherrimum</h:option>
                </h:options>
            </h:gameplay>
            <h:gameplay identifier="Truth" kind="none">
                <h:translated>L’un est le plus <h:b>beau</h:b> jeune homme et l’autre la plus <h:b>belle</h:b> jeune fille d’Orient.</h:translated>
            </h:gameplay>
        </h:scene>
    </h:act>
</h:root>
